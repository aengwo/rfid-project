<%- contentFor('body') %>
<!-- Features Header -->
<section class="bg-primary text-white py-5">
    <div class="container">
        <h1 class="display-4 fw-bold">Features</h1>
        <p class="lead">Discover what makes our RFID security system stand out</p>
    </div>
</section>

<!-- Main Features -->
<section class="py-5">
    <div class="container">
        <div class="row g-4">
            <!-- Access Control -->
            <div class="col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <i class="bi bi-shield-lock text-primary display-4 me-3"></i>
                            <h3 class="h4 mb-0">Advanced Access Control</h3>
                        </div>
                        <p class="card-text">Secure your premises with state-of-the-art RFID technology. Control who has access to different areas of your facility with customizable permission levels.</p>
                        <ul class="list-unstyled">
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Multiple security levels</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Customizable access permissions</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Real-time access monitoring</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Real-time Monitoring -->
            <div class="col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <i class="bi bi-graph-up text-primary display-4 me-3"></i>
                            <h3 class="h4 mb-0">Real-time Monitoring</h3>
                        </div>
                        <p class="card-text">Monitor all access points in real-time through our intuitive dashboard. Get instant notifications for unauthorized access attempts.</p>
                        <ul class="list-unstyled">
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Live activity dashboard</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Instant alerts</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Detailed access logs</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- User Management -->
            <div class="col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <i class="bi bi-people text-primary display-4 me-3"></i>
                            <h3 class="h4 mb-0">User Management</h3>
                        </div>
                        <p class="card-text">Easily manage users and their access permissions. Add, modify, or revoke access cards with just a few clicks.</p>
                        <ul class="list-unstyled">
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Easy user registration</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Bulk user import</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Quick permission updates</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Reporting -->
            <div class="col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <i class="bi bi-file-earmark-text text-primary display-4 me-3"></i>
                            <h3 class="h4 mb-0">Advanced Reporting</h3>
                        </div>
                        <p class="card-text">Generate comprehensive reports on access patterns and security events. Export data in multiple formats for analysis.</p>
                        <ul class="list-unstyled">
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Custom report generation</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Multiple export formats</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Scheduled reports</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Integration Section -->
<section class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5">System Integration</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="text-center">
                    <i class="bi bi-gear-wide-connected text-primary display-4 mb-3"></i>
                    <h3 class="h5">API Integration</h3>
                    <p>Connect with existing systems using our robust API</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="text-center">
                    <i class="bi bi-database-check text-primary display-4 mb-3"></i>
                    <h3 class="h5">Database Compatibility</h3>
                    <p>Works with major database systems</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="text-center">
                    <i class="bi bi-shield-check text-primary display-4 mb-3"></i>
                    <h3 class="h5">Security Standards</h3>
                    <p>Compliant with international security standards</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="py-5">
    <div class="container text-center">
        <h2 class="mb-4">Ready to Get Started?</h2>
        <p class="lead mb-4">Contact us today to learn more about our RFID security system features.</p>
        <a href="/contact" class="btn btn-primary btn-lg">Contact Us Now</a>
    </div>
</section> 