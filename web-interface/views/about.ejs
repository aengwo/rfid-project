<%- contentFor('body') %>
<!-- About Header -->
<section class="bg-primary text-white py-5">
    <div class="container">
        <h1 class="display-4 fw-bold">About Us</h1>
        <p class="lead">Learn more about our company and our mission</p>
    </div>
</section>

<!-- Company Overview -->
<section class="py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2 class="mb-4">Our Story</h2>
                <p class="lead">Founded in 2024, we are dedicated to providing cutting-edge RFID security solutions for businesses of all sizes.</p>
                <p>Our team of security experts and technology enthusiasts came together with a common goal: to create a secure, reliable, and user-friendly access control system that meets the needs of modern businesses.</p>
                <p>With years of experience in security systems and RFID technology, we've developed a comprehensive solution that combines advanced security features with intuitive management tools.</p>
            </div>
            <div class="col-md-6">
                <img src="/images/about-company.jpg" alt="Our Company" class="img-fluid rounded">
            </div>
        </div>
    </div>
</section>

<!-- Mission & Values -->
<section class="bg-light py-5">
    <div class="container">
        <h2 class="text-center mb-5">Our Mission & Values</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="bi bi-shield-check display-4 text-primary mb-3"></i>
                        <h3 class="card-title">Security First</h3>
                        <p class="card-text">We prioritize the security and safety of our clients' premises and data above all else.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="bi bi-lightbulb display-4 text-primary mb-3"></i>
                        <h3 class="card-title">Innovation</h3>
                        <p class="card-text">We continuously innovate to provide the most advanced and efficient security solutions.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="bi bi-people display-4 text-primary mb-3"></i>
                        <h3 class="card-title">Customer Focus</h3>
                        <p class="card-text">We are committed to understanding and meeting our customers' unique security needs.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Team Section -->
<section class="py-5">
    <div class="container">
        <h2 class="text-center mb-5">Our Team</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="/images/team-1.jpg" class="card-img-top" alt="Team Member">
                    <div class="card-body text-center">
                        <h3 class="card-title">John Doe</h3>
                        <p class="text-muted">CEO & Founder</p>
                        <p class="card-text">Security systems expert with over 15 years of experience in access control solutions.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="/images/team-2.jpg" class="card-img-top" alt="Team Member">
                    <div class="card-body text-center">
                        <h3 class="card-title">Jane Smith</h3>
                        <p class="text-muted">CTO</p>
                        <p class="card-text">Technology innovator specializing in RFID and IoT security solutions.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="/images/team-3.jpg" class="card-img-top" alt="Team Member">
                    <div class="card-body text-center">
                        <h3 class="card-title">Mike Johnson</h3>
                        <p class="text-muted">Head of Security</p>
                        <p class="card-text">Security consultant with extensive experience in physical and digital security systems.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="bg-primary text-white py-5">
    <div class="container text-center">
        <h2 class="mb-4">Join Our Mission</h2>
        <p class="lead mb-4">Be part of our journey to create a more secure future.</p>
        <a href="/contact" class="btn btn-light btn-lg">Contact Us</a>
    </div>
</section> 